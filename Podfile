# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'PictIonis' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for PictIonis

  # Debug
  pod 'XCGLogger'

  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Firestore'

  # User Login
  pod 'FBSDKLoginKit'
  pod 'FacebookLogin'
  pod 'GoogleSignIn'
  pod 'TwitterKit'

  target 'PictIonisTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'PictIonisUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
